<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_scoreboard"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/make_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bars"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button2"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/player_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/no_win"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scoot:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/no_scoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="half-scoot:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/no_halfscoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win"
                android:textSize="10dp"
                android:background="@drawable/my_button2"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_scoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scoot"
                android:textSize="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/my_button2"
                android:textColor="@color/white"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_halfscoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="half-scoot"
                android:background="@drawable/my_button2"
                android:textColor="@color/white"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
        <EditText
            android:id="@+id/type_score"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_button2"
            android:hint="type score"
            android:textColorHint="#808080"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"

            />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_addvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:background="@drawable/my_button2"
                android:textColor="@color/white"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/my_button2"
            android:id="@+id/btn_addscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add score"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/score_list"
        android:layout_below="@+id/make_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>